{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="jumbotron h-100">



        <div class="row justify-content-center">
            <h1> Inscription </h1>
        </div>
        <div class="row justify-content-center">
            {{ form_start(form) }}
            {{ form_row(form.email,{'label' : 'E-mail','attr' : {'placeholder' : 'Adresse Email...'}}) }}
            {{ form_row(form.username,{'label' : 'Nom d\'utilisateur','attr' : {'placeholder' : 'Nom d\'utilisateur...'}}) }}
            {{ form_row(form.password,{'label' : 'Mot de passe','attr' : {'placeholder' : 'Mot de passe...'}}) }}
            {{ form_row(form.confirm_password,{'label' : 'Confirmation du mot de passe','attr' : {'placeholder' : 'Confirmez votre mot de passe...'}}) }}
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary ml-2"> Modifier</button>
            </div>
            {{ form_end(form) }}


        </div>

    </div>
{% endblock %}