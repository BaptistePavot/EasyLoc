{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block body %}
    <div class="jumbotron h-100">

            <div class="row justify-content-center">
                <img src="{{ asset('./Images/logo.png') }}" height="100px" width="220px">
            </div>
        <div class="row justify-content-center">
                <h1 class="display-3 ">Bienvenue sur EasyLoc</h1>
    </div>

        <div class="row justify-content-center">
            <p class="lead">L'application permet d'emprunter des objet du quotidien. En echange vous vous engager a publie des objet que vous pouvez preter</p>
        </div>

        <hr class="my-4">

        <div class="container">
            <div class="row">

                <div class="col connexion ">
                    <h1 class="row justify-content-center">Connexion</h1>

                    <div class="row justify-content-center align-items-center">
                        <form action='{{ path('user_login') }}' method="POST">
                            <div class="form-group">
                                <input placeholder="Nom d'utilisateur" required name="_username" type="text" class="form-control">
                            </div>

                            <div class="form-group">
                                <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
                            </div>

                            <div class="form-group row justify-content-center">
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>
                        </form>


                    </div>
                </div>

                <div class="col inscription">

                    <div class="row justify-content-center">
                        <h1> Inscription </h1>
                    </div>
                    <div class="row justify-content-center">
                        {{ form_start(form) }}
                        {{ form_row(form.email,{'label' : 'E-mail','attr' : {'placeholder' : 'Adresse Email...'}}) }}
                        {{ form_row(form.username,{'label' : 'Nom d\'utilisateur','attr' : {'placeholder' : 'Nom d\'utilisateur...'}}) }}
                        {{ form_row(form.password,{'label' : 'Mot de passe','attr' : {'placeholder' : 'Mot de passe...'}}) }}
                        {{ form_row(form.confirm_password,{'label' : 'Confirmation du mot de passe','attr' : {'placeholder' : 'Confirmez votre mot de passe...'}}) }}
                        <div class="row justify-content-center">
                            <button type="submit" class="btn btn-primary ml-2"> Inscription</button>
                        </div>
                        {{ form_end(form) }}


                    </div>



                </div>
            </div>
    </div>



{% endblock %}
